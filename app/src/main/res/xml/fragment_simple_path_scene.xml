<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/shuffleTBN" />
        <OnClick motion:targetId="@+id/layCardsBTN01" />
    </Transition>

    <ConstraintSet android:id="@+id/start"
        android:visibility="invisible">
        <Constraint
            android:id="@+id/card01IV"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/shuffleTBN"
            android:layout_width="72dp"
            android:layout_height="89dp"
            motion:layout_constraintHorizontal_bias="0.166"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:rotation="360" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end"
        android:visibility="invisible">
        <Constraint
            android:layout_height="89dp"
            android:layout_marginTop="184dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="72dp"
            motion:layout_constraintStart_toStartOf="@+id/card01IV"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/card02IV" />
    </ConstraintSet>
</MotionScene>