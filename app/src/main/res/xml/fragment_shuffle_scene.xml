<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="400"
        >
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/shuffleBTN" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cardMixIV1"
            motion:layout_constraintEnd_toStartOf="@+id/layBTN"
            motion:layout_constraintStart_toEndOf="@+id/shuffleBTN"
            android:layout_width="63dp"
            android:layout_height="82dp"
            motion:layout_constraintHorizontal_bias="0.409"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:rotation="360"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>