<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="700"
        motion:autoTransition="animateToStart">

       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/shuffleBTN" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/rotatingCardIV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="78dp"
            android:layout_height="101dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.006"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotation="360" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

    </ConstraintSet>




    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/start2"
        motion:duration="800">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/layBTN" />
    </Transition>

    <ConstraintSet android:id="@+id/start2">
        <Constraint
            android:id="@+id/backCardIV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="78dp"
            android:layout_height="101dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="28dp"
            motion:layout_constraintHorizontal_bias="0.544"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:layout_marginEnd="28dp"
            motion:layout_constraintVertical_bias="0.266"
            android:layout_height="101dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.544"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="78dp"
            android:id="@+id/backCardIV"
            android:visibility="invisible" />
    </ConstraintSet>
</MotionScene>